<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/blogAuthorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/android_icon"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/blogAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/blogAuthorImage"
        android:text="@string/authorusername"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/blogImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/blogAuthorImage"

        app:srcCompat="@drawable/picture" />

    <ImageButton
        android:id="@+id/blogUpVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogImage"
        android:minHeight="48dp"
        app:srcCompat="@drawable/ic_outline_thumb_up_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/blogDownVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogImage"
        android:layout_toRightOf="@+id/blogUpVote"
        android:minHeight="48dp"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/ic_outline_thumb_down_24"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>